# Database
DATABASE_URL="postgresql://username:password@localhost:5432/starboard_db"

# NextAuth.js
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration
EMAIL_USER="your-email@example.com"
EMAIL_PASS="your-email-password"
EMAIL_FROM="noreply@mystarboard.ng"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"

# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="starboard-files"

# Zoom API
ZOOM_API_KEY="your-zoom-api-key"
ZOOM_API_SECRET="your-zoom-api-secret"
ZOOM_WEBHOOK_SECRET="your-zoom-webhook-secret"

# Application URLs
APP_URL="http://localhost:3000"
PUBLIC_URL="http://localhost:3000"
PRODUCTION_URL="https://app.mystarboard.ng"
PUBLIC_PRODUCTION_URL="https://mystarboard.ng"

# Supabase (if using)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# WebSocket Configuration
WEBSOCKET_URL="ws://localhost:3001"

# File Upload Limits
MAX_FILE_SIZE="10485760" # 10MB in bytes
ALLOWED_FILE_TYPES="image/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# Security
JWT_SECRET="your-jwt-secret-here"
ENCRYPTION_KEY="your-encryption-key-here"

# Node Environment
NODE_ENV="development"
